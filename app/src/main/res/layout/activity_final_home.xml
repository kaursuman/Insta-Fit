<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalHomeActivity"
    android:backgroundTint="#FFC400"
    android:padding="10dp"
    android:background="@color/backgroundHome"
    android:isScrollContainer="true"
    android:id="@+id/scrollViewFinal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:clipToPadding="false">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:text="Welcome To Insta-Fit"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textFontWeight="5"
                android:fontFamily="sans-serif"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btnLogout"
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:background="#E6E5E3"
                android:text="Logout"
                android:textColor="@color/active_dot"
                android:onClick="logout"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvMsg"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text=""
                android:textSize="20sp"
                android:textColor="@color/pinkAccentHome"
                android:gravity="center_horizontal"
                android:layout_marginLeft="55dp"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="178dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/source" />

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="100dp"
                    android:src="@drawable/sourcem" />

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="80dp"
                    android:src="@drawable/sourcep" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/imageViewFoot"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/steps" />

                <ProgressBar
                    android:id="@+id/progressBarSteps"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="330dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:indeterminateDrawable="@drawable/pb_drawable1"
                    android:indeterminateDuration="250000"></ProgressBar>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/mini" />

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="80dp"
                    android:src="@drawable/miniq" />

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="65dp"
                    android:src="@drawable/minin" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvAbout"
                android:layout_width="340dp"
                android:layout_height="150dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#E2E2E1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:padding="10dp"
                        android:src="@drawable/fabout" />

                    <TextView
                        android:id="@+id/tvTitleAbout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="About"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/v1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="@color/lightGrayLineHome" />

                    <TextView
                        android:id="@+id/tvAllAbout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="All about this app"
                        android:textColor="@color/PrimaryDarkHome" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clipToPadding="false"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/cvProfile"
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#E2E2E1"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/profile"
                        android:padding="10dp" />
                    <TextView
                        android:id="@+id/tvProfileTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="Profile"/>
                    <View
                        android:id="@+id/v2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightGrayLineHome"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:id="@+id/tvCheckPersonal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Check your personal info"
                        android:padding="5dp"
                        android:textColor="@color/PrimaryDarkHome"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTargets"
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#E2E2E1"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ftarget"
                        android:padding="10dp"/>
                    <TextView
                        android:id="@+id/tvTargetTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="Track Steps"/>
                    <View
                        android:id="@+id/v3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightGrayLineHome"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:id="@+id/tvSetAim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Track and Set your aims"
                        android:padding="5dp"
                        android:textColor="@color/PrimaryDarkHome"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clipToPadding="false"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/cvStats"
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#E2E2E1"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv4"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/fstats"
                        android:padding="10dp"/>
                    <TextView
                        android:id="@+id/tvStatTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="Calories Stats"/>
                    <View
                        android:id="@+id/v4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightGrayLineHome"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:id="@+id/tvShowStat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Generate My Calory Report"
                        android:padding="5dp"
                        android:textColor="@color/PrimaryDarkHome"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCoins"
                android:layout_width="160dp"
                android:layout_height="190dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#E2E2E1"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv5"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/fcoins"
                        android:padding="10dp"/>
                    <TextView
                        android:id="@+id/tvCoinsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="Fitness References"/>
                    <View
                        android:id="@+id/v5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightGrayLineHome"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:id="@+id/tvShowCoin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Show References"
                        android:padding="5dp"
                        android:textColor="@color/PrimaryDarkHome"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clipToPadding="false"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/cvVideos"
                android:layout_width="340dp"
                android:layout_height="150dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#E2E2E1"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv6"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/circlebackgroundpurple"
                        android:src="@drawable/fvideo"
                        android:padding="10dp" />
                    <TextView
                        android:id="@+id/tvTitleVideos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="Videos"/>
                    <View
                        android:id="@+id/v6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightGrayLineHome"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:id="@+id/tvCheckVideos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Check Health Videos"
                        android:padding="5dp"
                        android:textColor="@color/PrimaryDarkHome"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvDisclaimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disclaimer"
                android:textSize="8sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>